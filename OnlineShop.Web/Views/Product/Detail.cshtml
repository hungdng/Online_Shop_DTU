@model OnlineShop.Web.Models.ProductViewModel

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- BREADCRUMBS SETCTION START -->
<div class="breadcrumbs-section plr-200 mb-80">
    <div class="breadcrumbs overlay-bg">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="breadcrumbs-inner">
                        <h1 class="breadcrumbs-title">@Model.ProductName</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMBS SETCTION END -->
<!-- Start page content -->
<section id="page-content" class="page-wrapper">
    <!-- SHOP SECTION START -->
    <div class="shop-section mb-80">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <!-- single-product-area start -->
                    <div class="single-product-area mb-80">
                        <div class="row">
                            <!-- imgs-zoom-area start -->
                            <div class="col-md-5 col-sm-5 col-xs-12">
                                <div class="imgs-zoom-area">
                                    <img id="zoom_03" src="@Model.ThumbnailImage" data-zoom-image="img/product/6.jpg" alt="">
                                </div>
                            </div>
                            <!-- imgs-zoom-area end -->
                            <!-- single-product-info start -->
                            <div class="col-md-7 col-sm-7 col-xs-12">
                                <div class="single-product-info">
                                    <h3 class="text-black-1">@Model.ProductName</h3>
                                    <h5 style="margin-top:2rem; font-weight: bold">Warranty Period: <span>@Model.Warranty.Value.ToString("N0") months</span></h5>
                                    @if (Model.PromotionPrice > 0)
                                    {
                                        <h4 style="margin-top:2rem; font-weight: bold">Giá: <span style="color: red">@Model.PromotionPrice.Value.ToString("N0")</span></h4>
                                        <h5 style="margin-top:2rem; font-weight: bold"><span style="text-decoration:line-through">@Model.PromotionPrice.Value.ToString("N0")</span></h5>
                                    }
                                    else
                                    {
                                        if (Model.Price > 0)
                                        {
                                            <h4 style="margin-top:2rem; font-weight: bold">Price: <span style="color: red">@Model.Price.ToString("N0")</span></h4>
                                        }
                                        else
                                        {
                                            <h4 style="margin-top:2rem; font-weight: bold"><span style="color: red">Contact</span></h4>
                                        }
                                    }

                                    <!-- hr -->
                                    <hr>
                                    <!-- single-product-tab -->
                                    <div class="single-product-tab">
                                        <ul class="reviews-tab mb-20">
                                            <li class="active"><a href="#description" data-toggle="Description"</a></li>
                                            <li><a href="#information" data-toggle="tab">Configuration</a></li>
                                            <li><a href="#reviews" data-toggle="tab">Review</a></li>
                                        </ul>
                                        <div class="tab-content">
                                            <div role="tabpanel" class="tab-pane active" id="description">
                                                <p>@Html.Raw(Model.FullDescription)</p>
                                            </div>
                                            <div role="tabpanel" class="tab-pane" id="information">
                                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Autem, neque fugit inventore quo dignissimos est iure natus quis nam illo officiis,  deleniti consectetur non ,aspernatur.</p>
                                                <p>rerum blanditiis dolore dignissimos expedita consequatur deleniti consectetur non exercitationem.</p>
                                            </div>
                                            <div role="tabpanel" class="tab-pane" id="reviews">
                                                <!-- reviews-tab-desc -->
                                                <div class="reviews-tab-desc">
                                                    <!-- single comments -->
                                                    <div class="media mt-30">
                                                        <div class="media-left">
                                                            <a href="#"><img class="media-object" src="img/author/1.jpg" alt="#"></a>
                                                        </div>
                                                        <div class="media-body">
                                                            <div class="clearfix">
                                                                <div class="name-commenter pull-left">
                                                                    <h6 class="media-heading"><a href="#">Gerald Barnes</a></h6>
                                                                    <p class="mb-10">27 Jun, 2016 at 2:30pm</p>
                                                                </div>
                                                                <div class="pull-right">
                                                                    <ul class="reply-delate">
                                                                        <li><a href="#">Reply</a></li>
                                                                        <li>/</li>
                                                                        <li><a href="#">Delete</a></li>
                                                                    </ul>
                                                                </div>
                                                            </div>
                                                            <p class="mb-0">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer accumsan egestas .</p>
                                                        </div>
                                                    </div>
                                                    <!-- single comments -->

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- plus-minus-pro-action -->
                                    <div class="plus-minus-pro-action">
                                        <div class="sin-plus-minus f-left clearfix">

                                        </div>
                                        <div class="sin-pro-action f-right">
                                            <ul class="action-button">
                                                <li>
                                                    <a href="#" title="Wishlist" tabindex="0"><i class="zmdi zmdi-favorite"></i></a>
                                                </li>
                                                <li>
                                                    <a href="#" data-toggle="modal" data-target="#productModal" title="Quickview" tabindex="0"><i class="zmdi zmdi-zoom-in"></i></a>
                                                </li>
                                                <li>
                                                    <a href="#" title="Compare" tabindex="0"><i class="zmdi zmdi-refresh"></i></a>
                                                </li>
                                                <li>
                                                    @if (@Model.Price > 0)
                                                    {
                                                        <a href="" class="btn-AddToCart" data-id="@Model.ProductID" title="Add to cart"><i class="zmdi zmdi-shopping-cart-plus"></i></a>
                                                    }
                                                    else
                                                    {
                                                        <a href="" class="btn-contact" title="Add to cart"><i class="zmdi zmdi-shopping-cart-plus"></i></a>
                                                    }
                                                </li>

                                            </ul>
                                        </div>
                                    </div>
                                    <hr>
                                    @{
                                        var lstTags = (IEnumerable<OnlineShop.Web.Models.TagViewModel>)ViewBag.Tags;
                                    }
                                    <!-- plus-minus-pro-action -->
                                    <div class="plus-minus-pro-action">
                                        <div class="sin-pro-action">
                                            <ul class="action-button" id="list-tag">
                                                @foreach (var item in lstTags)
                                                {
                                                    <li>
                                                        <a href="/tag/@(item.ID).html" title="@item.Name">@item.Name</a>
                                                    </li>
                                                }                                               
                                            </ul>
                                        </div>
                                    </div>                                    

                                </div>
                            </div>
                            <!-- single-product-info end -->
                        </div>
                    </div>
                    <!-- single-product-area end -->
                    <div class="related-product-area">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="section-title text-left mb-40">
                                    <h2 class="uppercase">Related Products</h2>
                                    <h6>Related Products</h6>
                                </div>
                            </div>
                        </div>
                        @{
                            var relatedProduct = (IEnumerable<OnlineShop.Web.Models.ProductViewModel>)ViewBag.RelatedProducts;
                        }
                        <div class="row">
                            <div class="active-related-product">
                                <!-- product-item start -->
                                @foreach (var item in relatedProduct)
                                {
                                    var url = "/" + item.Alias + ".p-" + item.ProductID + ".html";
                                    <div class="col-xs-12">
                                        <div class="product-item">
                                            <div class="product-img">
                                                <a href="@url">
                                                    <img src="@item.ThumbnailImage" alt="" />
                                                </a>
                                            </div>
                                            <div class="product-info">
                                                <h6 class="product-title">
                                                    <a href="@url">@item.ProductName</a>
                                                </h6>
                                                <div class="pro-rating">
                                                    <a href="#"><i class="zmdi zmdi-star"></i></a>
                                                    <a href="#"><i class="zmdi zmdi-star"></i></a>
                                                    <a href="#"><i class="zmdi zmdi-star"></i></a>
                                                    <a href="#"><i class="zmdi zmdi-star-half"></i></a>
                                                    <a href="#"><i class="zmdi zmdi-star-outline"></i></a>
                                                </div>
                                                @if (item.PromotionPrice > 0)
                                                {
                                                    <h3 style="margin-bottom:5px;" class="pro-price">@item.PromotionPrice.Value.ToString("N0")</h3>
                                                    <h4 style="text-decoration: line-through; margin-bottom: 10px;" class="pro-price">@item.Price.ToString("N0")</h4>
                                                }
                                                else
                                                {
                                                    if (item.Price > 0)
                                                    {
                                                        <h3 style="margin-bottom:5px;" class="pro-price">@item.Price.ToString("N0")</h3>
                                                    }
                                                    else
                                                    {
                                                        <h3 style="margin-bottom:5px;" class="pro-price">Liên hệ</h3>
                                                    }
                                                    <h4 style="margin-bottom: 10px;" class="pro-price">&nbsp;</h4>
                                                }
                                                <ul class="action-button">
                                                    <li>
                                                        <a href="#" title="Wishlist"><i class="zmdi zmdi-favorite"></i></a>
                                                    </li>
                                                    <li>
                                                        <a href="#" data-toggle="modal" data-target="#productModal" title="Quickview"><i class="zmdi zmdi-zoom-in"></i></a>
                                                    </li>
                                                    <li>
                                                        <a href="#" title="Compare"><i class="zmdi zmdi-refresh"></i></a>
                                                    </li>
                                                    <li>
                                                        @if (item.Price > 0)
                                                        {
                                                            <a href="" class="btn-AddToCart" data-id="@item.ProductID" title="Thêm vào giỏ hàng"><i class="zmdi zmdi-shopping-cart-plus"></i></a>
                                                        }
                                                        else
                                                        {
                                                            <a href="" class="btn-contact" title="Add to cart"><i class="zmdi zmdi-shopping-cart-plus"></i></a>
                                                        }
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <!-- product-item end -->

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- SHOP SECTION END -->
</section>
<!-- End page content -->
